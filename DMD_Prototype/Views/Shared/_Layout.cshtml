<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ATS QA</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</head>
@{
    string[] EN = TempData["EN"] as string[];
    TempData.Keep();
}
<body style="background-color:lightgray">
    <header class="header-nav" style="font-family:'Franklin Gothic'; z-index:1056">
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color:blue">
            <div class="container-fluid flex-column">
                <div class="w-100 d-flex justify-content-between align-self-start mb-2">
                    <div class="my-auto">
                        <img style="width:60px; height: 30px" src="~/pimeslogo.png" />
                    </div>
                    <div class="">
                        <h3 class="text-white fs-3 my-auto">ATS ENGINEERING - DMD PORTAL</h3>
                    </div>
                    <div class="my-auto">
                        <img style="width:60px; height: 30px" src="~/ats wbg.png" />
                    </div>
                </div>
                <div class="w-100 d-flex justify-content-between">
                    <div class="d-flex my-auto">
                        <div class="mx-2">
                            <a class="nav-link active text-white" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                        </div>
                        <div class="mx-2">
                            <a class="nav-link active text-white" aria-current="page" asp-controller="Home" asp-action="ShowTravelers">Travelers</a>
                        </div>
                        @if (EN[1] != "User")
                        {
                            <div class="mx-2">
                                <a class="nav-link active text-white" aria-current="page" asp-controller="ProblemLog" asp-action="ProblemLogView">Problem Log</a>
                            </div>
                        }
                        <div class="mx-2">
                            <a class="nav-link active text-white" aria-current="page" asp-controller="Home" asp-action="AdminHome">More</a>
                        </div>
                    </div>
                    <div>
                        <div class="align-items-center text-white d-flex justify-content-center">
                            <form asp-controller="Home" asp-action="LogoutOptions" id="logout" onchange="this.submit()">
                                <select class="form-select bg-primary w-auto text-white border-1 border-dark" name="option">
                                    @{
                                        string[]? accData = TempData["EN"] as string[];
                                        TempData.Keep();
                                    }
                                    <option selected hidden>
                                        &#10004;
                                        @accData[0]
                                    </option>
                                    @{
                                        if (accData[1] == "ADMIN")
                                        {
                                            <option class="bg-white text-black" value="Accounts">
                                                &#128101;
                                                Admin
                                            </option>
                                        }
                                    }
                                    <option class="text-danger bg-white" value="Logout">
                                        &#9889; Log-out
                                    </option>
                                </select>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid" style="margin-top:110px">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="footerLayout">
        <div class="text-white">
            &copy; 2023 - DIGITALIZATION OF MANUFACTURING DOCUMENTS
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
