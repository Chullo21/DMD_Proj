<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ATS QA</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <style>
        .modal {
            z-index: 2001;
        }
        .header-nav {
            z-index: 2000;
        }
    </style>
</head>
@{
    string[] EN = TempData["EN"] as string[];
    TempData.Keep();
}
<body style="background-color:lightgray">
    <header class="header-nav" style="font-family:'Franklin Gothic'">
        <nav class="navbar" style="background-color:blue">
            <div class="container-fluid flex-column">
                <div class="w-100 d-flex justify-content-between align-self-start mb-2">
                    <div class="my-auto">
                        <img style="width:60px; height: 30px" src="~/pimeslogo.png" />
                    </div>
                    <div class="">
                        <h3 class="text-white fs-3 my-auto">ATS ENGINEERING - DMD PORTAL</h3>
                    </div>
                    <div class="my-auto">
                        <img style="width:60px; height: 30px" src="~/ats wbg.png" />
                    </div>
                </div>
                <div class="w-100 d-flex justify-content-between">
                    <div class="collapse navbar-collapse d-flex my-auto">
                        <button class="mx-1 d-flex btn text-white">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-door-fill my-auto" viewBox="0 0 16 16">
                                <path d="M6.5 14.5v-3.505c0-.245.25-.495.5-.495h2c.25 0 .5.25.5.5v3.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5Z" />
                            </svg>
                            <a class="nav-link active mx-1" asp-controller="Home" asp-action="Index">Home</a>
                        </button>                       
                        @if (EN[1] != "USER")
                        {
                            <button class="mx-1 d-flex btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="mx-1 bi bi-person-lines-fill text-white my-auto" viewBox="0 0 16 16">
                                    <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5zm.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1h-4zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2z" />
                                </svg>
                                <a class="nav-link active text-white" asp-controller="Home" asp-action="ShowTravelers">Travelers</a>
                            </button>
                            <button class="mx-1 d-flex btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-list-check text-white mx-1 my-auto" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M5 11.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3.854 2.146a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708L2 3.293l1.146-1.147a.5.5 0 0 1 .708 0zm0 4a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708L2 7.293l1.146-1.147a.5.5 0 0 1 .708 0zm0 4a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 0 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0z" />
                                </svg>
                                <a class="nav-link active text-white" asp-controller="ProblemLog" asp-action="ProblemLogView">Problem Log</a>
                            </button>
                        }
                        <div class="mx-1">          
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#searchDoc">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search text-white mx-1 my-auto" viewBox="0 0 16 16">
                                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                </svg>
                                Search Document
                            </button>
                        </div>
                    </div>
                    <div>
                        <div class="align-items-center text-white d-flex justify-content-center">
                            <form asp-controller="Home" asp-action="LogoutOptions" id="logout" onchange="this.submit()">
                                <select class="form-select bg-primary w-auto text-white border-1 border-dark" name="option">
                                    @{
                                        string[]? accData = TempData["EN"] as string[];
                                        TempData.Keep();
                                    }
                                    <option selected hidden>
                                        &#10004;
                                        @accData[0]
                                    </option>
                                    @{
                                        if (accData[1] == "ADMIN")
                                        {
                                            <option class="" value="Accounts">
                                                &#128101;
                                                Admin
                                            </option>
                                        }
                                    }
                                    <option class="text-danger bg-white" value="Logout">
                                        &#9889; Log-out
                                    </option>
                                </select>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid" style="margin-top:110px">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <div class="modal fade" data-bs-backdrop="static" id="searchDoc" style="z-index:2001">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header text-bg-primary">
                    <div class="modal-title d-flex">
                        <div class="mb-auto">
                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                            </svg>
                        </div>
                        <p class="fs-5 fw-bold text-center my-auto mx-2">Search Document</p>                        
                     </div>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="searchForm">
                        <div class="d-flex">
                            <input class="form-control" type="search" id="searchstring" placeholder="Search document" />
                            <input class="btn btn-primary mx-3" value="Search" type="submit"/>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <i class="w-100 text-start">Note: Enter Document Number or Assembly Part Number.</i>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="searchFailed" data-bs-backdrop="static">
        <div class="modal-dialog modal-sm modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <div class="modal-title d-flex">
                        <div class="my-auto">
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-exclamation-diamond-fill" viewBox="0 0 16 16">
                                <path d="M9.05.435c-.58-.58-1.52-.58-2.1 0L.436 6.95c-.58.58-.58 1.519 0 2.098l6.516 6.516c.58.58 1.519.58 2.098 0l6.516-6.516c.58-.58.58-1.519 0-2.098L9.05.435zM8 4c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995A.905.905 0 0 1 8 4zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                            </svg>
                        </div>
                        <p class="w-100 text-center fs-5 fw-bold text-white mx-3 my-auto">Document 404</p>
                    </div>
                </div>
                <div class="modal-body">
                    <p class="w-100 text-center ">Search failed, no match found.</p>
                </div>
                <div class="modal-footer">
                    <button class="btn" data-bs-dismiss="modal">Okay</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(function (){
            $('#searchForm').submit(function (e){
                e.preventDefault();

                $.ajax({
                    url: '@Url.Action("SearchDocument", "Home")',
                    data: { searchString: document.getElementById('searchstring').value },
                    success: function (r)
                    {
                        if (r.failed === 'f')
                        {
                            document.getElementById('searchstring').value = '';
                            $('#searchDoc').modal('hide');
                            $('#searchFailed').modal('show');
                        }
                        else
                        {
                            var link = '@Url.Action("MTIView", "MTI")' + '?docuNumber=' + r.documentNumber + '&workStat=' + false + '&sesID=' + null;
                            window.location.href = link;

                        }
                    }
                });
            });
        });
    </script>

    <footer class="footerLayout">
        <div class="w-100 h-100">
            <p class="text-white mx-3">&copy; 2023 - DIGITALIZATION OF MANUFACTURING DOCUMENTS</p>
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
