@model MTIModel
@{
    ViewData["Title"] = "Edit Engineering Documents";
}
<br />
<form asp-controller="MTI" asp-action="EditDocument" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12 col-lg-8">
            <div class="card">
                <div class="card-header w-100 fw-bold text-center">
                    Engineering Documents
                </div>
                <div class="card-body w-100 row ">
                    <div class="">
                        <div class="d-flex justify-content-evenly my-3">
                            <div>
                                <table class="table text-center">
                                    <thead>
                                        <tr>
                                            <th>
                                                Document No.
                                            </th>
                                            <th>
                                                Assembly No.
                                            </th>
                                            <th>
                                                Assembly Desc.
                                            </th>
                                            <th>
                                                Revision No.
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <input class="form-control" value="@Model.DocumentNumber" name="docuno" readonly />
                                            </td>
                                            <td>
                                                <input class="form-control" value="@Model.AssemblyPN" name="assyno" required />
                                            </td>
                                            <td>
                                                <input class="form-control" value="@Model.AssemblyDesc" name="assydesc" required />
                                            </td>
                                            <td>
                                                <input class="form-control" value="@Model.RevNo" name="revno" required />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="d-flex justify-content-evenly my-3">
                            <div class="flex-column">
                                <label class="w-100 text-center text-nowrap">MPI/MTI: </label>
                                <input class="form-control w-100" type="file" name="mpti" accept=".pdf" />
                            </div>
                            <div class="flex-column">
                                <label class="w-100 text-center text-nowrap">BOM: </label>
                                <input class="form-control" type="file" name="bom" accept=".pdf" />
                            </div>
                            <div class="flex-column">
                                <label class="w-100 text-center text-nowrap">Assy Draw.: </label>
                                <input class="form-control" type="file" name="drawing" accept=".pdf" />
                            </div>
                            <div class="flex-column">
                                <label class="w-100 text-center text-nowrap">Schem Diag: </label>
                                <input class="form-control" type="file" name="schema" accept=".pdf" />
                            </div>
                        </div>
                        <div class="d-flex justify-content-evenly my-3">
                            <div class="flex-column">
                                <label class="w-100 text-center text-nowrap">O.P.L: </label>
                                <input class="form-control w-100" type="file" name="opl" accept=".pdf" multiple />
                            </div>
                            <div class="flex-column">
                                <label class="w-100 text-center text-nowrap">Derogation: </label>
                                <input class="form-control" type="file" name="derogation" accept=".pdf" multiple />
                            </div>
                            <div class="flex-column">
                                <label class="w-100 text-center text-nowrap">P.R.C.O: </label>
                                <input class="form-control" type="file" name="prco" accept=".pdf" multiple />
                            </div>
                            <div class="flex-column">
                                <label class="w-100 text-center text-nowrap">Engineering Memo: </label>
                                <input class="form-control" type="file" name="memo" accept=".pdf" multiple />
                            </div>
                        </div>                        
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12 col-lg-4">
            <div class="card h-100">
                <div class="card-header w-100 fw-bold text-center">
                    More
                </div>
                <div class="card-body">
                    <div>
                        <label class="form-label">Traveler</label>
                        <input class="form-control" type="file" name="travFile"/>
                    </div>
                    <div>
                        <label class="form-label">Logsheet</label>
                        <select class="form-select" name="logType" onchange="ChangeLogType(this.value)">
                            @{
                                string currentAL;

                                switch (Model.AfterTravLog)
                                {
                                    case "T":
                                        {
                                            currentAL = "TEST EQUIPMENT LOG";
                                            break;
                                        }
                                    case "C":
                                        {
                                            currentAL = "CONFIGURATION LOG";
                                            break;
                                        }
                                    default:
                                        {
                                            currentAL = "NONE";
                                            break;
                                        }
                                }
                            }
                            <option value="@Model.AfterTravLog" selected hidden>@currentAL</option>
                            <option value="N">None</option>
                            <option value="T">TEST EQUIPMENT LOG</option>
                            <option value="C">CONFIGURATION LOG</option>
                        </select>
                    </div>
                    <div id="logsheetstuff" class="flex-column">

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card my-3">
        <div class="card-body d-flex justify-content-evenly">
            <input class="w-auto btn btn-primary" type="submit" />
        </div>
    </div>
</form>

<script>
    window.onload = function ()
    {
        ChangeLogType('@Model.AfterTravLog');
    };

    function ChangeLogType(str)
    {
        var lgstuff = document.getElementById('logsheetstuff');

        if (str !== "N")
        {
            lgstuff.innerHTML = '<div class="flex-column"><label class="form-label">Document Control Number</label><input class="form-control" name="docctrlno" value="@Model.LogsheetDocNo" required/></div>';
            lgstuff.innerHTML += '<div class="flex-column"><label class="form-label">Revision Number</label><input class="form-control" name="revnono" value="@Model.LogsheetRevNo" required/></div>';
        }
        else
        {
            lgstuff.innerHTML = ' ';
        }
    }

    function addRows() {
        var tab = document.getElementById('instable');
        var range = document.getElementById('range').value;

        for (var i = 1; i <= range; i++) {
            var row = tab.insertRow(-1);
            var cell1 = row.insertCell(0);
            var cell2 = row.insertCell(1);
            var cell3 = row.insertCell(2);

            cell1.innerHTML = '<input class="form-control w-100" type="text" name="stepno"/>';
            cell2.innerHTML = '<input class="form-control w-100" type="text" name="task"/>';
            cell3.innerHTML = '<div class="d-flex justify-content-around"><select class="form-select" name="division"><option value="false">Single</option><option value="true">Three</option></select></div>';
        }
    }
</script>
